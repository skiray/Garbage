.topContent{
  height: 100rpx;
  display: flex;
  background-color: var(--themeColor);
  justify-content: center;
  align-items: center;
}
.topContent input{
  width: 60vw;
  height: 60rpx;
  background-color: #fff;
  border-radius: 10rpx;
  padding-left: 30rpx;
}
.rightBar{
  display: flex;
}
.rightBar view{
  color: #fff;
  display: flex;
  margin: 0 10rpx;
}

.hotSearchGroup{
  display: flex;
  flex-wrap: wrap;
  margin: 10rpx 0;
}
.hotSearchItem{
  font-size: 35rpx;
  margin: 10rpx;
  border-radius: 10rpx;
  background-color: #dedede;
}
.content{
  width: 750rpx;
  margin-top: 30rpx;
}
.item{
  width: 100%;
  font-size:40rpx;
  color: var(--themeColor);
  margin: 25rpx;
  border-bottom: 2rpx  solid #dedede;
}